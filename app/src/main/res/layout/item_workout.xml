<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/bg_item_workout"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgWorkoutSelected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_selected"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imgWorkoutSelected"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvWorkoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_700"
            android:singleLine="true"
            android:textColor="@color/color_workout_title"
            android:textSize="16dp"
            tools:text="Full warm up workout"
            tools:textColor="@color/dark_purple" />

        <TextView
            android:id="@+id/tvExercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textColor="@color/color_workout_status"
            android:textSize="13dp"
            tools:text="15 exercises" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
